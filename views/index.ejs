<div class="author">
    <h1 class="author__heading">Hi I am not Raddy</h1>
    <p class="author__body">Not Raddy's body</p>
</div>

<img src="/img/stuart-pearce.jpeg" alt="" class="hero-img" width="750">

<section class="articles">
    <h2 class="article__heading">Latest Post</h2>

    <ul class="article-ul">
        <% data.forEach(post=> { %>

            <li>
                <a href="/post/<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <span class="article-list__date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>

            <% }) %>
    </ul>
    <% if (nextPage !==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older Posts</a>
        <% } %>
</section>